{
  "name": "fit-friends",
  "version": "0.0.1",
  "description": "",
  "author": "Sergei Nazarov",
  "private": true,
  "license": "UNLICENSED",
  "prisma": {
    "seed": "tsx libs/database-service/src/lib/prisma/seed.ts"
  },
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/fit-friends/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix"
  },
  "dependencies": {
    "@nestjs-modules/mailer": "^1.9.1",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "3.1.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.1.1",
    "@nestjs/passport": "^10.0.2",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/schedule": "4.0.0",
    "@nestjs/serve-static": "4.0.0",
    "@prisma/client": "^5.4.2",
    "bcrypt": "5.1.1",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.0",
    "cookie-parser": "1.4.6",
    "dayjs": "1.11.10",
    "file-type": "^16.5.4",
    "fs-extra": "11.1.1",
    "handlebars": "4.7.8",
    "joi": "17.11.0",
    "nodemailer": "^6.9.7",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "uuid-validate": "0.0.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/bcrypt": "5.0.0",
    "@types/cookie-parser": "1.4.4",
    "@types/express": "^4.17.17",
    "@types/fs-extra": "11.0.3",
    "@types/jest": "^29.5.2",
    "@types/multer": "1.4.9",
    "@types/node": "^20.3.1",
    "@types/nodemailer": "^6.4.13",
    "@types/passport": "1.0.13",
    "@types/passport-jwt": "3.0.10",
    "@types/passport-local": "1.0.36",
    "@types/supertest": "^2.0.12",
    "@types/uuid-validate": "^0.0.2",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "prisma": "5.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^3.14.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@shared/app-types(|/.*)$": "<rootDir>/libs/shared/app-types/src/$1",
      "^@database-service(|/.*)$": "<rootDir>/libs/database-service/src/$1",
      "^@config-service(|/.*)$": "<rootDir>/libs/config-service/src/$1",
      "^@shared/helpers(|/.*)$": "<rootDir>/libs/shared/helpers/src/$1",
      "^@shared/validate-decorators(|/.*)$": "<rootDir>/libs/shared/validate-decorators/src/$1",
      "^@shared/common(|/.*)$": "<rootDir>/libs/shared/common/src/$1",
      "^@shared/guards(|/.*)$": "<rootDir>/libs/shared/guards/src/$1",
      "^@shared/strategies(|/.*)$": "<rootDir>/libs/shared/strategies/src/$1"
    }
  }
}
