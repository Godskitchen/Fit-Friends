{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "paths": {
      "@libs/shared/app-types": [
        "libs/shared/app-types/src/index.ts"
      ],
      "@libs/shared/app-types/*": [
        "libs/shared/app-types/src/*"
      ],
      "@libs/database-service": [
        "libs/database-service/src/index.ts"
      ],
      "@libs/database-service/*": [
        "libs/database-service/src/*"
      ],
      "@libs/config-service": [
        "libs/config-service/src/index.ts"
      ],
      "@libs/config-service/*": [
        "libs/config-service/src/*"
      ],
      "@libs/shared/helpers": [
        "libs/shared/helpers/src/index.ts"
      ],
      "@libs/shared/helpers/*": [
        "libs/shared/helpers/src/*"
      ],
      "@libs/shared/validate-decorators": [
        "libs/shared/validate-decorators/src/index.ts"
      ],
      "@libs/sharedvalidate-decorators/*": [
        "libs/shared/validate-decorators/src/*"
      ],
      "@app/user": [
        "apps/fit-friends/src/user"
      ],
      "@app/user/*": [
        "apps/fit-friends/src/user/*"
      ],
      "@app/auth": [
        "apps/fit-friends/src/auth"
      ],
      "@app/auth/*": [
        "apps/fit-friends/src/auth/*"
      ],
      "@app/refresh-token": [
        "apps/fit-friends/src/refresh-token"
      ],
      "@app/refresh-token/*": [
        "apps/fit-friends/src/refresh-token/*"
      ],
      "@libs/shared/common": [
        "libs/shared/common/src/index.ts"
      ],
      "@libs/shared/common/*": [
        "libs/shared/common/src/*"
      ]
    }
  }
}